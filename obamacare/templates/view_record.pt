<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
 	<head>
 		<script type='text/javascript' src="${request.static_url('obamacare:static/image_viewer.js')}"></script>
 	</head>
    <div metal:use-macro="load: master.pt">
      <div metal:fill-slot="content">
      	<div class="content">
      		<div class="align-left">
						<form method="POST" action="profile">
							<table style='margin: 0 auto;	'>
								<tr>
									<td colspan="2"><h1>Record: ${recid} </h1></td>
								</tr>
								<tr>
									<td>Patient: </td> 
									<td><a href="${request.route_url('person_info', id=pid)}"> ${pname} </a></td>	

								</tr>
								<tr>
									<td>Doctor:</td>
									<td><a href="${request.route_url('person_info', id=did)}"> ${dname} </a></td>	
								</tr>
								<tr>
									<td>Radiologist:</td>
									<td><a href="${request.route_url('person_info', id=rid)}"> ${rname} </a></td>	
								</tr>
								<tr>
									<td>Test Type:</td> 				<td> <input type="text" name="phone" value="${ttype}" readonly/></td>
								</tr>
								<tr>
									<td>Perscribing Date:</td> 				<td> <input type="text" name="phone" value="${pdate}" readonly/></td>
								</tr>
								<tr>
									<td>Test Date:</td> 				<td> <input type="text" name="phone" value="${tdate}" readonly/></td>
								</tr>

								<tr>
									<td>Diagnosis:</td> 				<td> <input type="text" name="phone" value="${diag}" readonly/></td>
								</tr>
								<tr>
									<td>Description:</td> 				<td> <textarea name="phone" cols="50" rows="7" >${descr}</textarea></td>
								</tr>
							</table>
						</form>
					</div>
					<div id="imageviewer">
      			<script>get_images(${request.matchdict['id']});</script>
      		</div>
				</div>
			</div>
		</div>

</html>
