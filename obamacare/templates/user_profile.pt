<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
 
    <div metal:use-macro="load: master.pt">
      <div metal:fill-slot="content">
      	<div class="content">
	        <div class="align-left">
						<form method="POST" action="profile">
							<table style='margin: 0 auto;' cellspacing="10">
								<tr>
									<td colspan="2"><h1>Edit Profile</h1></td>
								</tr>
									<tr>
									<td>First Name:</td>		<td class="align-right"><input type="text" name="fname" value="${fname}"/></td>
								</tr>
								<tr>
									<td>Last Name: </td>		
									<td class="align-right"><input type="text" name="lname" value="${lname}"/></td>
								</tr>
								<tr>
									<td>Address:</td>		
									<td class="align-right"><input type="text" name="address" value="${address}"/></td>
								</tr>
								<tr>
									<td>Email:</td>		
									<td class="align-right"> <input type="text" name="email" value="${email}"/></td>
								</tr>
								<tr>
									<td>Phone:</td>		
									<td class="align-right"> <input type="text" name="phone" value="${phone}"/></td>
								</tr>
								<tr>
									<td colspan="2">Change Password:</td>
								</tr>
								<tr>
									<td>Current:</td> 				<td><input type="text" name="existing"/></td>
								</tr>
								<tr>
									<td>New:</td> 				<td><input type="text" name="newpass"/></td>
								</tr>
								<tr>
									<td>Confirm</td> 				<td><input type="text" name="newconfirm"/></td>
								</tr>
								<tr>
									<td colspan="2">
											<input type="submit" value="Submit"/>
									</td>
								</tr>

								<tr rowspan="${len(user_list)}">
						<td colspan="4">
						<div tal:repeat="doctor user_list">
							${doctor}
							<!--<input class="fname" type="text" name="${doctor.id}" value="${user[0]}" readonly/>
							<input class="lname"  type="text" name="${doctor.last_name" value="${user[1]}" readonly/>
							<input class="password" type="text" name="${user[0]}:newpass" value="New Password"/> 
							<input class="password" type="text" name="${user[0]}:confirmpass" value="Confirm New Password" />
							-->
						</div>
						</td>
					</tr>
								</table>
							
							
						</form>
					</div>
				</div>
			</div>
		</div>

</html>
