<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
 
    <div metal:use-macro="load: master.pt">
      <div metal:fill-slot="content">
      	<div class="content">
	      	<div class="overlay">
	      		<div id="peoplepicker">
		      		<table id='table1' class='resizable' style='margin: 0 auto;'>
						<thead><tr tal:condition="headers">
							<th tal:repeat="head range(len(headers))" tal:content="headers[repeat.head.index]">
							</th>
						</tr></thead>
						
						<tbody tal:define="row 0; col 0">
						
							<tr tal:repeat="row range(len(data))" tal:attributes="class 'even_zebra' if repeat.row.even else 'odd_zebra';onclick 'document.location = \'/record/' + str(data[row][0]) + '\''">
								<a href="#"><td tal:repeat="col range(len(headers))" tal:content="data[row][col]"> </td></a>
							</tr>


						</tbody>

					</table>
				</div>
			</div>

	        <div class="align-left">
						<form method="POST" action="" accept-charset="utf-8" enctype="multipart/form-data">
							<table style='margin: 0 auto;'>
								<tr>
									<td colspan="2"><h1>New Record </h1></td>
								</tr>
								<tr>
									<td>Patient: </td> 		<td><input type="text" name="lname" /></td>
								</tr>
								<tr>
									<td>Doctor:</td> 		<td><input type="text" name="address" /></td>
								</tr>
								<tr>
									<td>Radiologist:</td> 				<td> <input type="text" name="email" /></td>
								</tr>
								<tr>
									<td>Test Type:</td> 				<td> <input type="text" name="phone" /></td>
								</tr>
								<tr>
									<td>Perscribing Date:</td> 				<td> <input type="text" name="phone" /></td>
								</tr>
								<tr>
									<td>Test Date:</td> 				<td> <input type="text" name="phone" /></td>
								</tr>

								<tr>
									<td>Diagnosis:</td> 				<td> <input type="text" name="phone" /></td>
								</tr>
								<tr>
									<td>Description:</td> 				<td> <textarea name="phone" cols="50" rows="7" ></textarea></td>
								</tr>
								<tr>
									<td> File: </td> 	<td></td>
								</tr>
								<tr>
									<td colspan="2">
										<input type="file" name="file" />
									</td>
								</tr>
 								<tr>
									<td colspan="2">
											<input type="submit" value="Submit"/>
									</td>
								</tr>
							</table>
						</form>
					</div>
				</div>
			</div>
		</div>

</html>
