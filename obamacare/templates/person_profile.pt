<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
 
<div metal:use-macro="load: master.pt">
    <div metal:fill-slot="content">
      	<div class="content">
	        <div class="align-left">
	    
				<table  tal:condition="role!='group:a'" style='margin: 0 auto;'>
					<tr>
						<td colspan="2"><h1>${fname}'s Profile</h1></td>
					</tr>
					<tr>
						<td>First Name:</td>  		<td class="align-right">${fname}</td>
					</tr><tr>
						<td>Last Name: </td> 	<td class="align-right"> ${lname}</td>
					</tr>
					<tr>
						<td>Address: </td> 		<td class="align-right">${address}</td>
					</tr><tr>
						<td>Email:</td> 		<td class="align-right">${email}"</td>
					</tr>
					<tr>
						<td>Phone:</td> 	<td class="align-right">${phone}"</td>
					</tr>
					
				</table>
				<form tal:condition="role=='group:a'" method="POST" action="">
				<table style='margin: 0 auto;'>
					<tr>
						<td colspan="2"><h1>${fname}'s Profile</h1></td>
					</tr>
					<tr>
					<td>First Name:</td>		
					<td class="align-right"><input type="text" name="fname" value="${fname}"/></td>
					</tr>
					<tr>
						<td>Last Name: </td>		
						<td class="align-right"><input type="text" name="lname" value="${lname}"/></td>
					</tr>
					<tr>
						<td>Address:</td>		
						<td class="align-right"><input type="text" name="address" value="${address}"/></td>
					</tr>
					<tr>
						<td>Email:</td>		
						<td class="align-right"> <input type="text" name="email" value="${email}"/></td>
					</tr>
					<tr>
						<td>Phone:</td>		
						<td class="align-right"> <input type="text" name="phone" value="${phone}"/></td>
					</tr>
					<tr>
						<td colspan="2">
								<input type="submit" value="Submit"/>
						</td>
					</tr>
					
				</table>
				<
			</div>
		</div>
	</div>
</div>
</html>
